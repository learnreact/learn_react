<main class="m-0a xw-64r px-2">
  <h2 class="font-size-1">Your purchases</h2>
  <% if @purchases.count > 0 %>
    <table class="w-100%">
      <% @purchases.each do |purchase| %>
        <tr>
          <td>
            <%= link_to course_path(purchase.course) do %>
              <%= purchase.course.title %>
            <% end %>
          </td>

          <td>
            <%= purchase.created_at.strftime("%F") %>
          </td>

          <!-- TODO: show the price. -->
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>You have not purchased any courses.</p>
  <% end %>
</main>
