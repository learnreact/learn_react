<% if notice.present? %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="pa3">
  <div>
    <div>
      <%= @lesson.video_embed.html_safe %>
    </div>

    <div>
      <ul>
        <% @lesson.course.lessons.each do |lesson| %>
          <li>
            <% if @lesson == lesson %>
              <div class="ba b--green">
                <%= lesson.title %>
              </div>
            <% else %>
              <div>
                <%= link_to lesson do %>
                  <%= lesson.title %>
                <% end %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <%= render partial: "courses/purchase_button_or_info",
             locals:  { course: @lesson.course } %>

  <h4><%= @lesson.course.title %></h4>

  <h4><%= @lesson.title %></h4>

  <p><%= format_markdown(@lesson.description) %></p>

  <%= @lesson.transcript %>

  <%= link_to 'Back', course_path(@lesson.course) %>
</div>
